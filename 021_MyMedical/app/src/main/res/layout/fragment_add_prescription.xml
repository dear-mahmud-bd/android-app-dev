<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".AddPrescriptionFragment">

    <EditText
        android:id="@+id/editTextPatientProblem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:inputType="textMultiLine"
        android:hint="Patient Problem" />

    <EditText
        android:id="@+id/editTextMedicalTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:inputType="textMultiLine"
        android:hint="Medical Test" />

    <EditText
        android:id="@+id/editTextTreatmentMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:inputType="textMultiLine"
        android:hint="Treatment Medicine" />

    <ProgressBar
        android:id="@+id/addPrescriptionProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/addPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Prescreption"
        />


</LinearLayout>